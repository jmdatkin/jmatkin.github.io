from flask import Flask, render_template, request

app = Flask(__name__)

@app.route("/")
def home():
    print request
    print request.headers
    print request.method
    print request.args
    print request.form
    return render_template("auth.html")

@app.route("/auth")
def auth():
    return "ancient aliens await"

if (__name__ == "__main__"):
	app.debug = True
	app.run()

#request.headers: HTML headers fr client browser
#request.method: GET or POST
#request.args: arguments as a query string from GET request, immutable dictionary
#request.form: arguments sent via POST request
